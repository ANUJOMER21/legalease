<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/fragment_home_background"/>
    <RelativeLayout
        android:id="@+id/relative"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/back_payment"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_white"/>

        <TextView
            android:id="@+id/tv_title"
            android:text="Make Payment"
            android:layout_toRightOf="@+id/back_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="2dp"
            android:textSize="40sp"
            android:layout_gravity="center"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative"
        android:layout_above="@+id/btn_pay">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"

            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linear"
                android:layout_marginTop="5dp"
                android:background="@drawable/order_back"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="210dp">

                <TextView
                    android:id="@+id/tv_hint"
                    android:textSize="20sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/color_et"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order No."/>
                <TextView
                    android:id="@+id/tv_order"
                    android:textSize="50sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/white"
                    />


                <TextView
                    android:paddingLeft="17dp"
                    android:textSize="40sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_company"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linear"
                >

                <RelativeLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/fees_details_background"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="COUPAN DETAILS"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="15dp"
                        android:textSize="21sp"
                        android:layout_marginLeft="20dp"/>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:weightSum="1"
                            android:paddingLeft="30dp"
                            android:paddingTop="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:text="Government Fees"
                                android:textColor="@color/black"
                                android:layout_weight="0.6"
                                android:layout_width="0dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textSize="19sp"
                                />

                            <TextView
                                android:id="@+id/tv_price"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:gravity="right"
                                android:layout_marginRight="45dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textSize="19sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="1"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:text="Professional Fees"
                                android:textColor="@color/red"
                                android:layout_weight="0.6"
                                android:layout_width="0dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textSize="19sp"
                                />

                            <TextView
                                android:id="@+id/tv_professionalPrice"
                                android:textColor="@color/red"
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:gravity="right"
                                android:layout_marginRight="45dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textSize="19sp"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>




                <ProgressBar
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/progressBar"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:elevation="5dp"/>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/linear2"
                    >



                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7">
                        <LinearLayout
                            android:layout_below="@+id/card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/btn_pay"
                            android:paddingBottom="5dp"
                            android:paddingLeft="15dp"
                            android:background="@color/color_et"
                            android:orientation="vertical">



                            <LinearLayout

                                android:layout_marginRight="8dp"
                                android:paddingBottom="8dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_applied"
                                    android:visibility="gone"
                                    android:layout_gravity="center"
                                    android:background="@drawable/correct"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp" />


                                <EditText
                                    android:id="@+id/et_coupan"
                                    android:hint="Coupon Code"
                                    android:paddingLeft="55dp"
                                    android:paddingRight="55dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:textColor="@color/black_hard"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:gravity="left"
                                    android:background="@color/white"
                                    android:layout_marginRight="15dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp" />

                                <androidx.cardview.widget.CardView
                                    app:cardCornerRadius="5dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="6dp"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <RelativeLayout
                                        android:id="@+id/relative_apply"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <ProgressBar
                                            android:id="@+id/progressCoupan"
                                            android:visibility="gone"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_centerInParent="true"/>
                                        <Button
                                            android:id="@+id/apply_coupan"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Apply"
                                            android:textStyle="bold"
                                            android:textColor="@color/white"
                                            android:background="@color/rgyan_base_color"
                                            />
                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>



                                <RelativeLayout
                                    android:visibility="gone"
                                    android:id="@+id/relative_remove"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ProgressBar
                                        android:id="@+id/progressCoupanremove"
                                        android:visibility="gone"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerInParent="true"/>
                                    <Button
                                        android:id="@+id/remove_coupan"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Remove"
                                        android:textStyle="bold"
                                        android:textColor="@color/yellow_light"
                                        android:background="@color/white"
                                        />
                                </RelativeLayout>

                            </LinearLayout>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_promo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:paddingLeft="30dp"
                                />



                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="5dp"
                                android:layout_marginRight="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:weightSum="1"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:id="@+id/cb_easyMoney"
                                        android:backgroundTint="@color/yellow_light"
                                        android:text="Easy Money"
                                        android:layout_gravity="center"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:layout_weight="0.7"
                                        android:layout_width="0dp"
                                        android:layout_height="30dp"
                                        android:textSize="19sp"
                                        />
                                    <TextView
                                        android:gravity="center"
                                        android:id="@+id/tv_wallet"
                                        android:textColor="@color/black_hard"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.3"
                                        android:layout_height="wrap_content"
                                        android:textSize="19sp"
                                        android:textStyle="bold"
                                        />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/yellow_light" />


                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                android:layout_marginRight="15dp">
                                <LinearLayout
                                    android:weightSum="1"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:background="@color/rgyan_base_color"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:paddingLeft="5dp"
                                        android:text="AMOUNT PAYABLE"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:layout_weight="0.6"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:textSize="19sp"
                                        />

                                    <TextView
                                        android:id="@+id/tv_finalPrice"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:gravity="right"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.3"
                                        android:layout_height="wrap_content"
                                        android:textSize="19sp"
                                        />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                    </ScrollView>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Pay"
        android:textColor="@color/white"
        android:textSize="20sp"/>
</RelativeLayout>