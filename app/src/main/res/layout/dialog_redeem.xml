<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="8dp"
    android:padding="10dp"
    android:layout_gravity="center"
    app:cardElevation="12dp"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_closeredeem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv1"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Get Your Redeem Money"
            android:textSize="19sp" />


        <com.github.florent37.androidslidr.Slidr
            android:id="@+id/slider"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv1"
            android:layout_width="250dp"
            android:tooltipText="fghfhkg"
            android:layout_height="wrap_content"
            app:slidr_regions_centerText="false"
            app:slidr_region_leftColor="#4CAF50" />

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/slider"
            app:cardElevation="4dp"
            app:cardCornerRadius="6dp"
            android:layout_marginBottom="10dp">


            <TextView
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/verifyOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textStyle="bold"
                android:background="@color/rgyan_base_colorlight"
                android:textColor="@color/white"
                android:text="Verify"
                android:textSize="20sp" />
            <TextView
                android:gravity="center"
                android:id="@+id/sendRedeem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textStyle="bold"
                android:background="@color/rgyan_base_colorlight"
                android:textColor="@color/white"
                android:text="Redeem"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>