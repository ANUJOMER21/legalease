<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="8dp"
    android:padding="10dp"
    android:layout_gravity="center"
    app:cardElevation="12dp"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Enter PayTm Number"
            android:textSize="19sp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:id="@+id/relative_et">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:gravity="center"
                android:id="@+id/et_number"
                android:inputType="number"
                android:textColor="@color/black_hard"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:layout_below="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter UPI Number"
                android:gravity="center"
                android:id="@+id/et_upiNumber"
                android:textColor="@color/black_hard"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/relative_et"
            app:cardElevation="4dp"
            app:cardCornerRadius="6dp"
            android:layout_marginBottom="10dp">


            <TextView
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/verifyOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textStyle="bold"
                android:background="@color/rgyan_base_colorlight"
                android:textColor="@color/white"
                android:text="Verify"
                android:textSize="18sp" />
        <TextView
            android:gravity="center"
            android:id="@+id/sendOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textStyle="bold"
            android:background="@color/rgyan_base_colorlight"
            android:textColor="@color/white"
            android:text="Send Otp"
            android:textSize="18sp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>