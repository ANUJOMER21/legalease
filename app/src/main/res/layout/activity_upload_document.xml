<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadDocument">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_white"
            android:padding="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Your Document"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_hintDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="All documents related to this order has been succesfull uploaded"
        android:gravity="center"
        android:background="@color/yellow_light"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:padding="15dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:id="@+id/tv_docHead"
        android:background="@color/color_et"
        android:padding="10dp"
        android:textColor="@color/black_hard"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <LinearLayout
            android:id="@+id/linrear_front"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_delete1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close"
                        android:elevation="4dp"
                        android:layout_alignParentRight="true"
                        android:padding="15dp"/>
                    <TextView
                        android:id="@+id/tv_hint1"
                        android:elevation="4dp"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/black_hard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload Front Image"
                        android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_pan"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_uploaded1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uploaded"
                android:textSize="17sp"
                android:padding="7dp"
                android:gravity="center"
                android:background="@color/green"
                android:textColor="@color/white"
                />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_back"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_delete2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close"
                        android:elevation="4dp"
                        android:layout_alignParentRight="true"
                        android:padding="15dp"/>
                    <TextView
                        android:id="@+id/tv_hint2"
                        android:elevation="4dp"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/black_hard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload Back Image"
                        android:layout_centerInParent="true"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/iv_secondDoc"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_uploaded2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uploaded"
                android:textSize="17sp"
                android:padding="7dp"
                android:gravity="center"
                android:background="@color/green"
                android:textColor="@color/white"
                />


        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_uploadedDoc">
        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:visibility="gone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/rv_progress"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


</LinearLayout>