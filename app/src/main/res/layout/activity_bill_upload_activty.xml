<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BillUploadActivty">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/fragment_home_background"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/back"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_white"/>

        <TextView
            android:layout_toRightOf="@+id/back"
            android:id="@+id/serviceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="2dp"
            android:textSize="17sp"
            android:layout_gravity="center"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/item_account_background"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="Sales"/>
        <TextView
            android:id="@+id/tv_expanses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:background="@drawable/item_account_background"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black_80"
            android:layout_weight="1"
            android:text="Expenses"/>
        <TextView
            android:id="@+id/tv_others"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:padding="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black_80"
            android:background="@drawable/item_account_background"
            android:layout_weight="1"
            android:text="Others"/>


    </LinearLayout>


    <LinearLayout
        android:layout_margin="15dp"
        android:layout_below="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_selectMonth"
            android:layout_weight="0.33"
            android:textColor="@color/black_hard"
            android:gravity="center"
            android:textSize="17sp"
            android:padding="8dp"
            android:background="@color/color_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_gravity="center"
            android:layout_width="4dp"
            android:layout_height="60dp"
            android:background="@color/black_twenty" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_weight="0.33"
            android:textColor="@color/black_hard"
            android:gravity="center"
            android:textSize="17sp"
            android:padding="8dp"
            android:background="@color/color_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_gravity="center"
            android:layout_width="4dp"
            android:layout_height="60dp"
            android:background="@color/black_twenty" />
        <TextView

            android:layout_weight="0.33"
            android:id="@+id/button_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/rgyan_base_color"
            android:textSize="17sp"
            android:padding="8dp"
            android:textColor="@color/white"
            android:text="Search"/>

    </LinearLayout>




    <TextView
        android:visibility="gone"
        android:id="@+id/tv_noData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Data"
        android:gravity="center"
        android:textSize="50sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_images"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

    </androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/relative_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_document"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"/>
    </RelativeLayout>



</LinearLayout>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="35dp"
        app:srcCompat="@drawable/upload_file" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>