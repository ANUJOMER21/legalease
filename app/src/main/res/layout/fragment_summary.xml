<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/fragment_home_background"/>

    <RelativeLayout
        android:id="@+id/relative"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/back"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_white"/>

        <TextView
            android:text="SUMMARY"
            android:layout_toRightOf="@+id/back"
            android:id="@+id/serviceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="2dp"
            android:textSize="17sp"
            android:layout_gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/relative"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_selectMonth"
            android:layout_weight="0.33"
            android:textColor="@color/black_hard"
            android:gravity="center"
            android:textSize="17sp"
            android:padding="8dp"
            android:background="@color/color_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_gravity="center"
            android:layout_width="4dp"
            android:layout_height="60dp"
            android:background="@color/black_twenty" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_weight="0.33"
            android:textColor="@color/black_hard"
            android:gravity="center"
            android:textSize="17sp"
            android:padding="8dp"
            android:background="@color/color_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_gravity="center"
            android:layout_width="4dp"
            android:layout_height="60dp"
            android:background="@color/black_twenty" />
        <TextView

            android:layout_weight="0.33"
            android:id="@+id/button_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/rgyan_base_color"
            android:textSize="17sp"
            android:padding="8dp"
            android:textColor="@color/white"
            android:text="Search"/>

    </LinearLayout>



    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:visibility="gone"
            android:elevation="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_noData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Data"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/black_hard"
        android:textStyle="bold"/>

    <LinearLayout
        android:padding="2dp"
        android:id="@+id/linear_data"
        android:layout_marginBottom="58dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="1">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
             >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:background="@color/green"/>

                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linear1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/rupee_symbol"/>
                            <TextView
                                android:id="@+id/tv_balanceByBank"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:text="00"
                                android:textSize="20sp"
                                android:textStyle="bold"

                                />
                        </LinearLayout>
                        <TextView
                            android:layout_below="@+id/linear1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_hard"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:layout_marginTop="7dp"
                            android:textStyle="bold"
                            android:text="CASH BALANCE"/>
                    </RelativeLayout>


                </RelativeLayout>
                
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                app:cardCornerRadius="2dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
      >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">


                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:background="@color/extradark_blue"/>

                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linear2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/rupee_symbol"/>
                        <TextView
                            android:id="@+id/tv_balanceByBook"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="00"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            />
                    </LinearLayout>
                    <TextView
                        android:layout_below="@+id/linear2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_hard"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="7dp"
                        android:textStyle="bold"
                        android:text="BANK BALANCE"/>

                </RelativeLayout>

                </RelativeLayout>



            </androidx.cardview.widget.CardView>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="1">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
 >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:background="@color/rgyan_base_color"/>

                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <LinearLayout
                        android:id="@+id/linear3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/rupee_symbol"/>
                        <TextView
                            android:id="@+id/tv_totalIncome"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="00"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            />
                    </LinearLayout>
                    <TextView
                        android:layout_below="@+id/linear3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_hard"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="7dp"
                        android:textStyle="bold"
                        android:text="TOTAL INCOME"/>

                </RelativeLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
    >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">



                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:background="@color/red"/>

                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/linear4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/rupee_symbol"/>
                        <TextView
                            android:id="@+id/tv_totalExpaenses"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="00"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            />
                    </LinearLayout>
                    <TextView
                        android:layout_below="@+id/linear4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_hard"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="7dp"
                        android:textStyle="bold"
                        android:text="TOTAL EXPENSES"/>

                </RelativeLayout>
                </RelativeLayout>




            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/rgyan_base_color">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="25dp"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="25dp"
                    android:paddingLeft="30dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Net Profit/(Loss)"/>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rupee_white"/>
                    <TextView
                        android:id="@+id/tv_profitLoss"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>




